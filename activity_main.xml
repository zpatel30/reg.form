<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLogo0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="30dp"
            android:text="Register"
            android:textColor="@android:color/black"
            android:textSize="60px" />

        <LinearLayout
            android:id="@+id/llLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#63ffe5"
                android:textSize="40px" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo2"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Company Name"
                android:textColor="#63ffe5"
                android:textSize="40px" />
            <EditText
                android:id="@+id/compname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"/>


        </LinearLayout>
        <LinearLayout
        android:id="@+id/llLogo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLogo1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo2"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Contact Number"
                android:textColor="#63ffe5"
                android:textSize="40px" />
            <EditText
                android:id="@+id/contnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo2"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Date of Birth"
                android:textColor="#63ffe5"
                android:textSize="40px" />

            <TextView
                android:id="@+id/dt"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/btndate"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Select"
                android:background="#63ffe5" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo2"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textColor="#63ffe5"
                android:textSize="40px" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Female"
                android:onClick="checkButton"
                android:textColor="@android:color/white"
                android:textSize="40px"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Male"
                    android:onClick="checkButton"
                    android:textColor="@android:color/white"
                    android:textSize="40px"/>
            </RadioGroup>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo4"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#63ffe5"
                android:textSize="40px" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo5"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo6"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textColor="#63ffe5"
                android:textSize="40px" />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textWebPassword"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogo14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo5"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo6"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#333333"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#63ffe5"
                android:text="Google ReCaptcha"
                android:textSize="40px"/>
            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Verify captcha"
                android:background="#63ffe5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLogo7"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogo17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llLogo8"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#63FFE5"
                android:text="Register Now"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>